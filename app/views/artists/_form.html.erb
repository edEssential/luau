<section class="parallax-bg2 parallax colored clearfix marginUp">
	<div class="content dark padded container content3">
		
		<div class="title grid-full">
			<h2>Add/edit your artist's content here</h2>
			<span class="border"></span>
		</div>

		<div class="formWrapper">
			<% if @artist.errors.any? %>
				<div class="message warning">
					<% @artist.errors.full_messages.each do |msg| %>
			   			<%= msg %><br/>
					<% end %>
				</div>
			<% end %>	
			<%= form_for(@artist) do |f| %>
				<%= f.label :name, class: "formText" %><br/>
    			<%= f.text_field :name, class: 'email text-area' %><br /><br />
				<%= f.label :bio, class: "formText" %><br/>
	    		<%= f.text_area :bio, class: 'text-areaArea' %><br /><br />
			 	<%= f.label :mugshot, class: "formText"  %><br />
			 	<%= f.file_field :mugshot, class: 'email text-area'  %><br /><br />
				<%= f.label :Website_URL, class: "formText" %><br />
	    		<%= f.text_field :website_url, class: 'email text-area' %><br /><br />
				<%= f.label :release_date?, class: "formText" %><br />
	    		<%= f.text_field :release_date, class: 'email text-area'  %><br /><br />
				<%= f.label :Press_clipping_1, class: "formText" %><br/>
	    		<%= f.text_area :press1, class: 'text-areaArea' %><br /><br />
				<%= f.label :Press_clipping_2, class: "formText" %><br/>
	    		<%= f.text_area :press2, class: 'text-areaArea' %><br /><br />
				<%= f.label :Press_clipping_3, class: "formText" %><br/>
	    		<%= f.text_area :press3, class: 'text-areaArea' %><br /><br />
	    		<%= f.submit %>
			<% end %>
		</div>

		
</section>
