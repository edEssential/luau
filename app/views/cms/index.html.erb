<section class="parallax-bg2 parallax colored clearfix marginUp">
	<div class="content dark container">
		
		<div class="title grid-full">
			<h2>Add/edit site content here</h2>
			<span class="border"></span><br/><br/>
			<h6><%= link_to 'BACK TO SITE', root_path, :class => "button" %></h6>
		</div>

		<div class="cmsWrapper">
			<div class="releases">
				<div class="divHeader">Artists</div>
				<div class="tableWrapper">
					<div class="tableContent">
						<% if @artists.count > 0 %>
							<table width="100%">
								<tr class="tableHeader">
									<th>TITLE</th>
									<th>ARTIST WEBSITE</th>
								</tr>
								<tr><hr class="ruler"/></tr>
								<% @artists.each do |a| %>
									<tr class="tableRow">
										<td width="22%"><%= a.name %></td>
										<td width="72%"><%= a.website_url %></td>
										<td width="3%">
											<input type="hidden" value="artists" class="modal-model-type">
											<input type="hidden" value=<%= a.id %> class="modal-object-id">
											<%= link_to image_tag('edit2.png'), '#myModal',  :data => {:toggle => "modal"}, class: "cmsEdit" %>
										</td>
										<!--<td width="3%"><%#= link_to image_tag('edit2.png'), edit_release_path(r) %></td>-->
										<td width="3%"><%= link_to image_tag('delete2.png'), a, :confirm => 'Are you sure you want to delete this artist?', :method => :delete %></td>
									</tr>
								<% end %>
							</table>
						<% else %>
							<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO ARTIST YET... ADD SOME BELOW ?!</em></td></tr></table>
						<% end %>
					</div>
					<div id="person-form" title="Person" style="display:none"></div>
				</div>
			</div>
			<h6><%= link_to 'Add new artist', new_artist_path, :class => "darkButton2" %></h6>
		</div>
		<div class="cmsWrapper">
			<div class="releases">
				<div class="divHeader">Releases</div>
				<div class="tableWrapper">
					<div class="tableContent">
						<% if @releases.count > 0 %>
							<table width="100%">
								<tr class="tableHeader">
									<th>TITLE</th>
									<th>BUY LINK</th>
								</tr>
								<tr><hr class="ruler"/></tr>
								<% @releases.each do |r| %>
									<tr class="tableRow">
										<td width="22%"><%= r.title %></td>
										<td width="72%"><%= r.buy_link %></td>
										<td width="3%">
											<input type="hidden" value="releases" class="modal-model-type">
											<input type="hidden" value=<%= r.id %> class="modal-object-id">
											<%= link_to image_tag('edit2.png'), '#myModal',  :data => {:toggle => "modal"}, class: "cmsEdit" %>
										</td>
										<td width="3%"><%= link_to image_tag('delete2.png'), r, :confirm => 'Are you sure you want to delete this release?', :method => :delete %></td>
									</tr>
								<% end %>
							</table>
						<% else %>
							<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO RELEASES YET... ADD SOME BELOW ?!</em></td></tr></table>
						<% end %>
					</div>
				</div>
			</div>
			<h6><%= link_to 'Add new release', new_release_path, :class => "darkButton2" %></h6>
		</div>
		<div class="cmsWrapper2">
			<div class="releases">
				<div class="divHeader">Contact admin</div>
				<div class="tableWrapper">
					<div class="tableContent">
						<% if @contacts.count > 0 %>
							<table width="100%">
								<tr class="tableHeader">
									<th>SET UP BY</th>
									<th>EMAIL</th>
									<th>CONTACT TEXT</th>
								</tr>
								<tr><hr class="ruler"/></tr>
								<tr class="tableRow">
									<td width="15%"><%= @admin.name %></td>
									<td width="25%"><%= @admin.email %></td>
									<td width="54%"><%= @admin.message_text %></td>
									<td width="3%">
										<input type="hidden" value="contacts" class="modal-model-type">
										<input type="hidden" value=<%= @admin.id %> class="modal-object-id">
										<%= link_to image_tag('edit2.png'), '#myModal',  :data => {:toggle => "modal"}, class: "cmsEdit" %>
									</td>
									<td width="3%"><%= link_to image_tag('delete2.png'), @admin, :confirm => 'Are you sure you want to delete the admin text?', :method => :delete %></td>
								</tr>
							</table>
						<% else %>
							<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVEN'T SET UP THE ADMIN VIEW YET... DO SO BELOW ?!</em></td></tr></table>
						<% end %>
					</div>
				</div>
			</div>
			<% if @contacts.count < 1 %>
				<h6><%= link_to 'Create contact text', new_contact_path, :class => "darkButton2" %></h6>
			<% else %>
				<h6><%= link_to 'Download contacts list', contacts_xls_path, :class => "darkButton2" %></h6>
			<% end %>
		</div>
		
		<div class="title grid-full">
			<h6><%= link_to 'BACK TO SITE', root_path, :class => "button" %></h6>
		</div>
		
		<%= link_to 'model', '?model="video"#myModal',  :data => {:toggle => "modal"} %></td>
		<%= render partial: 'modal' %>
		
	</div>
</section>