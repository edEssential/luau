<% if controller.controller_name == 'home' %>

<nav class="clearfix">

	<!-- Logo -->
	
	<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
		<div class="logo">
			<a id="top" href="#"><%= image_tag('logo.png') %></a>
		</div>
	<% else %>
		<div class="logo">
			<%= link_to image_tag('logo.png'), root_path %>
		</div>
	<% end %>
	
	<% if user_signed_in? %>
		<div class="userInfo">
			<div>{ Logged in as <strong><%= current_user.email %></strong> }</div>
			<div class="deviseLinks"><%= link_to 'Edit', edit_user_registration_path %> | <%= link_to 'Logout', destroy_user_session_path, method: :delete %></div>
		</div>
		<%= link_to "manage content", cms_path, class: "manageButton" %>
	<% end %>

	<!-- Mobile Nav Button -->
	<button type="button" class="nav-button" data-toggle="collapse" data-target=".nav-content">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <!-- Navigation Links -->
    <div class="navigation">
		<ul class="nav-content">
			<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
				<li><a href="#section2">Artists</a></li>
			<% else %>
				<li><%= link_to 'Artists', "#{root_path}" + "#section2" %>
			<% end %>
			<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
				<li><a href="#section3">Releases</a></li>
			<% else %>
				<li><%= link_to 'Releases', "#{root_path}" + "#section3" %>
			<% end %>
			<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
				<li><a href="#section4">News</a></li>
			<% else %>
				<li><%= link_to 'News', "#{root_path}" + "#section4" %>
			<% end %>
			<li><%= link_to 'Blog', home_blog_path %></li>
			<li><%= link_to 'Store', 'http://luaurecords.bigcartel.com/', target: "_blank" %></li>
		</ul>
	</div>

</nav>
<!-- End Navigation -->

<% else %>
	<div class="navigation-alt">&nbsp;</div>
<% end %>