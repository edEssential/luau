<% if controller.controller_name == 'home' %>

<nav class="clearfix">

	<!-- Logo -->
	
	<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
		<div class="logo">
			<a id="top" href="#"><%= image_tag('LRNew.png') %></a>
		</div>
	<% else %>
		<div class="logo">
			<%= link_to image_tag('LRNew.png'), root_path %>
		</div>
	<% end %>
	
	<% if user_signed_in? %>
		<div class="userInfo">
			<div>{ Logged in as <strong><%= current_user.email %></strong> }</div>
			<div class="deviseLinks">
				<%= link_to 'Edit', edit_user_registration_path %> | 
				<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
			</div>
		</div>
	<% end %>

	<!-- Mobile Nav Button -->
	<button type="button" class="nav-button" data-toggle="collapse" data-target=".nav-content">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

	<!-- Navigation Links -->
    <div class="navigation">
		<ul class="nav-content">
			<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
				<!--<li><a href="#section2">News</a></li>-->
			<% else %>
				<li><%#= link_to 'News', "#{root_path}" + "#section4" %></li>
			<% end %>
			<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
				<li><a href="#section3">Artists</a></li>
			<% else %>
				<li><%= link_to 'Artists', "#{root_path}" + "#section2" %></li>
			<% end %>
			<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
				<li><a href="#section4">Releases</a></li>
			<% else %>
				<li><%= link_to 'Releases', "#{root_path}" + "#section3" %></li>
			<% end %>
			<% if controller.controller_name == 'home' && controller.action_name == 'index' %>
				<li><a href="#section5">Contact</a></li>
			<% else %>
				<li><%= link_to 'Contact', "#{root_path}" + "#section5" %></li>
			<% end %>
			<li><%= link_to 'Store', 'http://luaurecords.bigcartel.com/', target: "_blank" %></li>
			<% if user_signed_in? %>
				<li><%= link_to "CMS", cms_path %></li>
			<% end %>
		</ul>
	</div>

</nav>
<!-- End Navigation -->

<% else %>
	<div class="navigation-alt">&nbsp;</div>
<% end %>