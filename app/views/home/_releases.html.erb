<!-- Begin Videos -->
<section id="section3" class="parallax-bg3 parallax colored clearfix">
	<div class="content2 light">

		<!-- Text -->
		<div class="title grid-full">
			<h2>Releases</h2>
			<span class="border"></span>
		</div>
		
		<div id="releaseShowWrapper" style="display:none;">

			<div class="closeRelease grid-full">
				<a data-remote="true" href="#" id="removeRelease"><i class="icon-remove"></i></a>               
			</div>
			<div class="ajax-content clearfix"></div>

			<div id="releaseContent">
			</div>

		</div>
		
		<div class="grid-full releasesIndex">
		
			<ul class="releasesShow grid-full" id="releaselist">
				<% @releases.each do |r| %>
					<li class="release">
						<input type="hidden" value=<%= r.id %> class="modal-object-id">
						<%= link_to '#', :remote => 'true', :class => 'releaseClick' do %>
							<div class="packshot"><%= image_tag r.packshot.url(:rect, :alt => "thumbnail") %></div>
							<ul class="releaseColor">
								<li class="releaseUnder">
									<h4 class="artist"><%= r.artistname %></h4>
									<h6 class="artist"><em><%= r.title %></em></h6>
								</li>
							</ul>
						<% end %>
					</li>
				<% end %>
			</ul>
		
		</div>
		
	</div>
	
	<%= render 'releaseShow' %>
</section>
<!-- End Videos -->