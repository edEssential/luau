<!-- Begin Portfolio -->
<section id="section3" class="portfolio clearfix">

	<!-- Title -->
	<div class="content container">
		<div class="title grid-full">
			<h2>Artists</h2>
			<span class="border"></span>
		</div>
	</div>
	
	<div id="artistShowWrapper" style="display:none;">
	
		<div class="closeArtist grid-full">
			<a data-remote="true" href="#" id="removeArtist"><i class="icon-remove"></i></a>               
		</div>
		<div class="ajax-content clearfix"></div>
	
		<div id="artistContent">
		</div>
	
	</div>

	<!-- Thumbnails -->
	<ul id="portfolio-grid" class="projectlist clearfix">
		<% @artists.each do |a| %>
			<li class="project">
				<input type="hidden" value=<%= a.id %> class="modal-object-id">
				<%= link_to '#', :remote => 'true', :class => 'artistClick' do %>
					<%= image_tag a.mugshot.url(:medium, :alt => "thumbnail") %>
					<div class="projectinfo">
						<div class="meta">
							<h4><%= a.name %></h4>
							<h6><em><%= a.website_url %></em></h6>
						</div>
					</div>
				<% end %>
			</li>
		<% end %>
	</ul>


</section>
<!-- End Portfolio -->