<section class="parallax-bg2 parallax colored clearfix marginUp formPage">
	<div class="content dark padded container content3">
		
		<div class="title grid-full">
			<h2>Add/edit your release content here</h2>
			<span class="border"></span>
		</div>

		<div class="formWrapper">
			<% if @release.errors.any? %>
				<div class="message warning">
					<% @release.errors.full_messages.each do |msg| %>
			   			<%= msg %><br/>
					<% end %>
				</div>
			<% end %>	
			<%= form_for(@release) do |f| %>
				<div class="accordion" rel="0">
					<div class="accordion-title darkText">
						<h5><span></span><a href="#">Product Info.</a></h5>
					</div>
					<div class="accordion-inner">
						<table style="margin-left:-20px;">
							<tr>
								<td><%= f.label :artist_name, class: "formText" %></td>
								<td><%= f.label :title, class: "formText" %></td>
								<td><%= f.label :link_to_artist?, class: "formText" %></td>
								<td><%= f.label 'Packshot (310px X 205px)', class: "formText"  %></td>
							</tr>
							<tr>
								<td><%= f.text_field :artistname, class: 'email text-area' %></td>
								<td><%= f.text_field :title, class: 'email text-area' %></td>
								<td><%= f.collection_select :artist_id, Artist.order(:name),:id,:name, include_blank: true %></td>
								<td><%= f.file_field :packshot %></td>
							</tr>
						</table>
					</div>
					<div class="accordion-title darkText">
						<h5><span></span><a href="#">Sales Info.</a></h5>
					</div>
					<div class="accordion-inner">
						<table style="margin-left:0px;">
							<tr>
								<td><%= f.label :description, class: "formText" %></td>
								<td><%= f.label :URL, class: "formText" %></td>
								<td><%= f.label :release_date?, class: "formText" %></td>
							</tr>
							<tr>
								<td><%= f.text_area :description, class: 'text-areaArea' %></td>
								<td style="vertical-align:top"><%= f.text_field :buy_link, class: 'email text-area' %></td>
								<td style="vertical-align:top"><%= f.text_field :release_date, class: 'email text-area'  %></td>
							</tr>
						</table>
					</div>
					<div class="accordion-title darkText">
						<h5><span></span><a href="#">Press</a></h5>
					</div>
					<div class="accordion-inner">
						<table style="margin-left:0px;">
							<tr>
								<td><%= f.label :Press_clipping_1, class: "formText" %></td>
								<td><%= f.label :Source, class: "formText" %></td>
							</tr>
							<tr>
								<td><%= f.text_area :press1, class: 'text-areaPress' %></td>
								<td style="vertical-align:top"><%= f.text_area :presssource1, class: 'text-area' %></td>
							</tr>
							<tr>
								<td><%= f.label :Press_clipping_2, class: "formText" %></td>
								<td><%= f.label :Source, class: "formText" %></td>
							</tr>
							<tr>
								<td><%= f.text_area :press2, class: 'text-areaPress' %></td>
								<td style="vertical-align:top"><%= f.text_area :presssource2, class: 'text-area' %></td>
							</tr>
							<tr>
								<td><%= f.label :Press_clipping_3, class: "formText" %></td>
								<td><%= f.label :Source, class: "formText" %></td>
							</tr>
							<tr>
								<td><%= f.text_area :press3, class: 'text-areaPress' %></td>
								<td style="vertical-align:top"><%= f.text_area :presssource3, class: 'text-area' %></td>
							</tr>
						</table>
					</div>
				</div>
				<div>
	    		<%= f.submit "Save release", class: "button1" %>
				</div>
			<% end %>
		</div>

		
</section>
